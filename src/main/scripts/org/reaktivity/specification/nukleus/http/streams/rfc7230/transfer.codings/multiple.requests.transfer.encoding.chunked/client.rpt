connect await ROUTED_CLIENT
        "nukleus://streams/http#0"
  option nukleus:window 8192
  option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:headers()
                              .item(":scheme", "http")
                              .item(":method", "POST")
                              .item(":path", "/")
                              .item(":authority", "localhost:8080")
                              .item("content-type", "text/plain")
                              .item("transfer-encoding", "chunked")
                              .build()}
connected

write "Chunk A"
write "Chunk B"
write "Chunk C"
write close

read nukleus:begin.ext ${http:headers()
                             .item("status", "200")
                             .build()}
read closed

read notify RESPONSE_ONE_RECEIVED

connect await RESPONSE_ONE_RECEIVED
        "nukleus://streams/http#0"
  option nukleus:window 8192
  option nukleus:transmission "half-duplex"

write nukleus:begin.ext ${http:headers()
                              .item(":scheme", "http")
                              .item(":method", "POST")
                              .item(":path", "/")
                              .item(":authority", "localhost:8080")
                              .item("content-type", "text/plain")
                              .item("transfer-encoding", "chunked")
                              .build()}
connected

write "1"
write "12"
write "12345"
write close

read nukleus:begin.ext ${http:headers()
                             .item("status", "200")
                             .build()}
read closed
