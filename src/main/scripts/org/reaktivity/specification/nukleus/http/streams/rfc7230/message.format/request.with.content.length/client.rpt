property newSourceOutputRef ${nukleus:newRouteRef()} # external scope
property newCorrelationId ${nukleus:newCorrelationId()}

connect await ROUTED_OUTPUT
        "nukleus://http/streams/source"
    option nukleus:route ${newSourceOutputRef}
    option nukleus:correlation ${newCorrelationId}
    option nukleus:window 8192
    option nukleus:transmission "simplex"

write nukleus:begin.ext [0x00] [0x07] ":scheme" [0x04] "http"
write nukleus:begin.ext [0x00] [0x07] ":method" [0x04] "POST"
write nukleus:begin.ext [0x00] [0x05] ":path" [0x01] "/"
write nukleus:begin.ext [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
write nukleus:begin.ext [0x00] [0x0e] "content-length" [0x02] "11"

connected

write "hello world"
write close


accept await ROUTED_OUTPUT
       "nukleus://source/streams/http"
    option nukleus:route 0L
    option nukleus:window 8192
    option nukleus:transmission "simplex"
accepted  

read nukleus:begin.ext [0x00] [0x07] ":status" [0x03] "200"

connected
