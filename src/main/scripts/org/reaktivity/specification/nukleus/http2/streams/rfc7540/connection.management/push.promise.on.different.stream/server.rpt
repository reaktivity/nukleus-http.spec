property newClientAcceptRef ${nuklei:newReferenceId()} 
property newServerConnectRef ${newClientAcceptRef} # external scope

property serverTransport "nukleus://target/streams/http2#source"

accept ${serverTransport}
        option nukleus:route ${newServerConnectRef}
        option nukleus:window 8192
        option nukleus:transmission "duplex"

#
# First client-initiated stream
#
accepted

read nukleus:begin.ext ${http:header(":method", "POST")}
                       ${http:header(":scheme", "http")}
                       ${http:header(":path", "/")}
                       ${http:header(":authority", "localhost:8080")}

write nukleus:begin.ext ${http:header(":status", "200")}
                        ${http:header("server", "CERN/3.0 libwww/2.17")}
                        ${http:header("date", "Wed, 01 Feb 2017 19:12:46 GMT")}
                        ${http:header("content-type", "text/html; charset=UTF-8")}
                        ${http:header("content-length", "113")}

connected

write await SECOND_REQUEST_RECEIVED

# First push promise
write nukleus:data.ext ${http:header(":method", "GET")}
                       ${http:header(":scheme", "http")}
                       ${http:header(":path", "/style.css")}
                       ${http:header(":authority", "localhost:8080")}
write flush

# Second push promise
write nukleus:data.ext ${http:header(":method", "GET")}
                       ${http:header(":scheme", "http")}
                       ${http:header(":path", "/script.js")}
                       ${http:header(":authority", "localhost:8080")}
write flush

write "<html>"
      "<head><link rel=\"stylesheet\" href=\"styles.css\"></head>"
      "<body><script src=\"script.js\"></script></body>"
      "</html>"
write flush



#
# Second client-initiated stream
#
accepted

read nukleus:begin.ext ${http:header(":method", "GET")}
                       ${http:header(":scheme", "http")}
                       ${http:header(":path", "/push")}
                       ${http:header(":authority", "localhost:8080")}

write nukleus:begin.ext ${http:header(":status", "200")}
                        ${http:header("server", "CERN/3.0 libwww/2.17")}
                        ${http:header("date", "Wed, 01 Feb 2017 19:12:46 GMT")}

connected

read notify SECOND_REQUEST_RECEIVED



#
# First promised response
#
accepted

read nukleus:begin.ext ${http:header(":method", "GET")}
                       ${http:header(":scheme", "http")}
                       ${http:header(":path", "/style.css")}
                       ${http:header(":authority", "localhost:8080")}

write nukleus:begin.ext ${http:header(":status", "200")}
                        ${http:header("server", "CERN/3.0 libwww/2.17")}
                        ${http:header("date", "Wed, 01 Feb 2017 19:12:46 GMT")}
                        ${http:header("content-type", "text/css")}
                        ${http:header("content-length", "31")}

connected

# Third push promise
write nukleus:data.ext ${http:header(":method", "GET")}
                       ${http:header(":scheme", "http")}
                       ${http:header(":path", "/widget.css")}
                       ${http:header(":authority", "localhost:8080")}
write flush

write "h1 {"
      "    color: blue;"
      "}"
write flush
write notify FIRST_PROMISED_RESPONSE


#
# Second promised response
#
accepted

read nukleus:begin.ext ${http:header(":method", "GET")}
                       ${http:header(":scheme", "http")}
                       ${http:header(":path", "/script.js")}
                       ${http:header(":authority", "localhost:8080")}

write nukleus:begin.ext ${http:header(":status", "200")}
                        ${http:header("server", "CERN/3.0 libwww/2.17")}
                        ${http:header("date", "Wed, 01 Feb 2017 19:12:46 GMT")}
                        ${http:header("content-type", "text/javascript")}
                        ${http:header("content-length", "15")}

connected

write await FIRST_PROMISED_RESPONSE
write "function f() {"
      "}"
write flush
