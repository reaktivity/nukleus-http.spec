property newServerAcceptRef ${nukleus:newRouteRef()} # external
property data20k ${http2:randomBytes(20000)}
property data15k ${http2:randomBytes(15000)}


accept await ROUTED_SERVER
       "nukleus://http2/streams/source"
       option nukleus:route ${newServerAcceptRef}
       option nukleus:window 40000
       option nukleus:transmission "duplex"
accepted
connected

# client connection preface
read "PRI * HTTP/2.0\r\n"
      "\r\n"
      "SM\r\n"
      "\r\n"

# server connection preface - SETTINGS frame
write [0x00 0x00 0x06]                   # length = 6
      [0x04]                             # HTTP2 SETTINGS frame
      [0x00]                             # flags = 0x00
      [0x00 0x00 0x00 0x00]              # stream_id = 0
      [0x00 0x03 0x00 0x00 0x00 0x64]    # SETTINGS_MAX_CONCURRENT_STREAMS(0x03) = 100
write flush

read [0x00 0x00 0x0c]                   # length = 12
     [0x04]                             # HTTP2 SETTINGS frame
     [0x00]                             # flags = 0x00
     [0x00 0x00 0x00 0x00]              # stream_id = 0
     [0x00 0x04 0x00 0x00 0xff 0xff]    # SETTINGS_INITIAL_WINDOW_SIZE(0x04) = 65535
     [0x00 0x05 0x00 0x00 0x4e 0x20]    # SETTINGS_MAX_FRAME_SIZE(0x05) = 20000

write [0x00 0x00 0x00]                   # length = 0
      [0x04]                             # HTTP2 SETTINGS frame
      [0x01]                             # ACK
      [0x00 0x00 0x00 0x00]              # stream_id = 0
write flush

read [0x00 0x00 0x00]                  # length = 0
     [0x04]                            # HTTP2 SETTINGS frame
     [0x01]                            # ACK
     [0x00 0x00 0x00 0x00]             # stream_id = 0

#
# request headers with HEADERS frames
#
read [0x00 0x00 0x13]                  # length = 19
     [0x01]                            # HEADERS frame
     [0x05]                            # END_HEADERS | END_STREAM
     [0x00 0x00 0x00 0x01]             # stream_id = 1
     [0x82]                            # :method: GET
     [0x86]                            # :scheme: http
     [0x84]                            # :path: /
     [0x01] [0x0e] "localhost:8080"    # :authority: localhost:8080

#
# response HEADERS frame
#
write [0x00 0x00 0x5b]                                      # length
      [0x01]                                                # HTTP2 HEADERS frame
      [0x04]                                                # END_HEADERS
      [0x00 0x00 0x00 0x01]                                 # stream_id=1
      [0x88]                                                # :status: 200
      [0x0f 0x27] [0x14] "CERN/3.0 libwww/2.17"             # server
      [0x0f 0x12] [0x1d] "Wed, 01 Feb 2017 19:12:46 GMT"    # date
      [0x0f 0x10] [0x18] "text/html; charset=UTF-8"         # content-type
      [0x0f 0x0d] [0x05] "55000"                            # content-length
write flush

#
# response DATA frame
#
write [0x00 0x4e 0x20]                          # length = 20000
      [0x00]                                    # HTTP2 DATA frame
      [0x00]                                    # no flags
      [0x00 0x00 0x00 0x01]                     # stream_id=1
write ${data20k}
write flush

#
# response DATA frame
#
write [0x00 0x4e 0x20]                          # length = 20000
      [0x00]                                    # HTTP2 DATA frame
      [0x00]                                    # no flags
      [0x00 0x00 0x00 0x01]                     # stream_id=1
write ${data20k}
write flush

#
# response DATA frame
#
write [0x00 0x3a 0x98]                          # length = 15000
      [0x00]                                    # HTTP2 DATA frame
      [0x00]                                    # no flags
      [0x00 0x00 0x00 0x01]                     # stream_id=1
write ${data15k}
write flush

